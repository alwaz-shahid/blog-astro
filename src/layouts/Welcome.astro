  .content {
    padding: 0;
    /* max-width: 960px; */
    margin: 0 auto;
    width: 100%;
    min-height: 100vh;
    background-color: rgb(30, 28, 28);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .reveal-container {
    padding: 0;
    /* max-width: 960px; */
    margin: 0 auto;
    width: 100%;
    height: 100vh;
    animation-name: grow;
    animation-duration: 1s;
    animation-fill-mode: forwards;
    animation-delay: 3s;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    /* overflow: hidden; */
  }

  @keyframes grow {
    from {
      height: 100vh;
    }
    to {
      height: 0px;
      display: hidden;
    }
  }

  @keyframes reveal-one {
    0% {
      transform: translate(0, 100%);
      opacity: 0;
      visibility: visible;
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
      visibility: hidden;
    }
  }
  @keyframes reveal {
    0% {
      transform: translate(0, 100%);
      opacity: 0.2;
      visibility: visible;
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
      visibility: hidden;
    }
  }
</style>
