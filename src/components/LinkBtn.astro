---
const { platform, url } = Astro.props;
---

<a
  href={url}
  target='_blank'
  class='relative px-6 py-3 font-bold text-black group'>
  <span
    class='absolute inset-0 w-full h-full transition duration-300 ease-out transform -translate-x-2 -translate-y-2 bg-slate-50 group-hover:translate-x-0 group-hover:translate-y-0'
  ></span>
  <span class='absolute inset-0 w-full h-full border-4 border-red-500'></span>
  <span class='relative capitalize'>{platform}</span>
</a>
